@model IEnumerable<UserManagement.Web.Models.Logs.LogEntryViewModel>

@{
    ViewData["Title"] = "Logs";

    string currentSort = Context.Request.Query["sortOrder"].FirstOrDefault() ?? "asc";
    string nextSort = currentSort == "asc" ? "desc" : "asc";
    string currentSearch = Context.Request.Query["search"].FirstOrDefault() ?? "";
}

<h2>Logs</h2>

<div class="mb-3">
    <form method="get" class="d-flex">
        <input type="text" name="search" value="@currentSearch" class="form-control me-2" placeholder="Search by user name..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <a asp-controller="Logs" asp-action="List" asp-route-sortOrder="@nextSort" asp-route-search="@currentSearch">
                        Log ID @(currentSort == "asc" ? "▲" : "▼")
                    </a>
                </th>
                <th>User</th>
                <th>User ID</th>
                <th>Action</th>
                <th>Timestamp</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Id</td>
                    <td>@log.UserForename @log.UserSurname</td>
                    <td>@log.UserId</td>
                    <td>@log.Action</td>
                    <td>@log.Timestamp.ToString("g")</td>
                    <td>
                        <a asp-controller="Logs"
                           asp-action="Details"
                           asp-route-id="@log.Id"
                           class="btn btn-primary float-end btn-sm">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-controller="Users" asp-action="List" class="btn btn-secondary float-end btn-sm">
        Back to Users
    </a>
</div>
